<!-- <%= %> : usare le variabili del file js -->
<!-- <% %> : permette di scirvere js nel file html -->

<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <% for(i=0; i <newListItems.length; i++) {%>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItems[i] %></p>
            </div>
            <% } %>

        <form action="/" method="post">
            <input type="text" placeholder="write something" name="newItem" autocomplete="off">
            <button type="submit" name="list" value="<%= title %>">+</button>
        </form>
    </div>
<%- include("footer") -%>

